@inject SignInManager<Template.Areas.Identity.Data.ApplicationUser> signInManager;

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="" class="brand-link">
        <img src="" alt="" class="b" style="opacity: .8">
        <span class="brand-text font-weight-light">Augussta</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        @if (signInManager.IsSignedIn(User))
        {
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                @*<div class="image">
                    <img src="" class="img-circle elevation-2" alt="User Image">
                </div>*@
                <div class="info">
                    <a href="#" class="d-block">Hello: @User.Identity.Name</a>
                </div>
            </div>
        }
        <!-- SidebarSearch Form -->
        <!--<div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>-->

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        <i class="fa fa-home nav-icon"></i>
                        <p>Home</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Index" class="nav-link">
                        <i class="fa fa-users nav-icon"></i>
                        <p>Users</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="ScoreCard" asp-action="Index" class="nav-link">
                        <i class="fa fa-address-card nav-icon"></i>
                        <p>Score Cards</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="TeeBox" asp-action="Index" class="nav-link">
                        <i class="fa fa-flag nav-icon"></i>
                        <p>Tee Boxes</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Course" asp-action="Index" class="nav-link">
                        <i class="fa fa-braille nav-icon"></i>
                        <p>Courses</p>
                    </a>
                </li>

                @*<li class="nav-item">
                    <a href="" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Roles</p>
                    </a>
                </li>*@
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
