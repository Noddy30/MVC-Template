@{
    ViewData["Title"] = "Courses";
}
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-auto ml-auto d-print-none">
            <a asp-action="" method="get" class="btn btn-primary mr-4 mb-2">
                Add Golf Course
            </a>
            <a asp-action="CourseDataFromAPI" method="get" class="btn btn-primary mr-4 mb-2">
                Add Golf Course from API
            </a>

        </div>
    </div>
</div>


<div class="card card-default">
    <div class="card-body table-responsive">
        <table id="myTable" class="table table-striped table-bordered">
            <thead class="center">
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Holes</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts
{
    <script>
        var Table;
        $(document).ready(function () {
            // Initialize DataTable
            Table = $('#myTable').dataTable({
                "paging": true,
                "ordering": true,
                "searching": true,
                "info": true,
                "serverSide": true,
                "ajax": {
                    "url": '@Url.Action("Paginate", "Course")',
                    "type": "POST",
                    "data": function (d) {
                        d.DisplayStart = d.start;
                        d.DisplayLength = d.length;
                        d.SortCol_0 = d.order[0].column;
                        d.SortDir_0 = d.order[0].dir;    
                        d.SearchFilter = d.search.value; 
                    }
                },
                "columns": [
                    {
                        "data": "Name",
                        "bSortable": true
                    },
                    {
                        "data": "City",
                        "bSortable": true
                    },
                    {
                        "data": "Country",
                        "bSortable": true
                    },
                    {
                        "data": "Holes",
                        "bSortable": true
                    }, 
                    {
                        "data": "Id",
                        "bSearchable": false,
                        "bSortable": false,
                        'mRender': function (data) {
                            debugger;
                            return '<a href="/Course/EditCourse/' + data + '" class="fa fa-eye" style="color: darkslategray; margin-left: 66px; margin-right: 23px;"></a>' +
                                    '<a href="/Course/Delete/' + data + '" class="fa fa-trash danger" style="color: indianred;"></a>';
                        }
                    },
                ]
            });
        });
    </script>
}