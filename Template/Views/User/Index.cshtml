@{
    ViewData["Title"] = "User Page";
}
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="page-header">
    
    <div class="row align-items-center">
        <div class="col-auto ml-auto d-print-none">
            <a asp-action="CreateUser" method="get" class="btn btn-primary mr-4 mb-2">
                Add New User
            </a>
        </div>
    </div>
</div>


<div class="card card-default">
    <div class="card-body">
        <table id="myTable" class="table table-striped table-bordered">
            <thead class="center">
                <tr>
                    <th>UserName</th>
                    <th>Phone number</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts
{
    <script>

        $(document).ready(function () {
            loadTable();
        });

        function loadTable() {
            var empdata = [];
            // Fetch data from the server and populate empdata
            $.ajax({
                url: '@Url.Action("Paginate", "User")',
                type: 'POST',
                async: false,
                success: function (data) {
                    $.each(data, function (key, value) {
                        var Id = "<input type='hidden' value=" + value.id + " />";
                        var editbtn = `<a href="/User/EditUser/${value.id}" class="btn btn - primary">Edit</a>`;
                        var removebtn = "<a href='/Controllers/User/EditUser' class='btn btn-danger'>Remove</a>";
                        var action = editbtn + " | " + removebtn + Id;

                        empdata.push([value.userName, value.phoneNumber, action]);
                    });
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching data:', error);
                }
            });

            // Initialize the DataTable
            $('#myTable').DataTable({
                data: empdata
            });
        }
    </script>
}
