@using Microsoft.Extensions.Configuration
@model RegisterModel
@{
    Layout = "/Areas/Identity/Pages/Account/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Register";
    ViewData["ActiveTab"] = "Register";
}
@{
    var activeTab = ViewData["ActiveTab"] as string;
    string IsActiveTab(string tab) => activeTab == tab ? "active" : null;
}

<section class="forms-section">
    <div class="form-wrapper">
        <button type="button" class="switcher switcher-signup">
            Sign Up
            <span class="underline"></span>
        </button>
        <form class="form form-signup needs-validation" method="post" novalidate>
            <fieldset>
                <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                <div class="input-block">
                    <label class="form-label" asp-for="Input.Email">Email address</label>
                    <input class="form-control" asp-for="Input.Email" autocomplete="username" placeholder="Email Address" autofocus required>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-block">
                    <input asp-for="Input.Password" autocomplete="current-password" class="form-control" placeholder="Password" required>
                    <button type="button" class="input-group-text" id="eye">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-block">
                    <label class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <input asp-for="Input.ConfirmPassword" autocomplete="current-password" class="form-control" placeholder="Confirm Password" required>
                        <button type="button" class="input-group-text" id="eye">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        </button>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </fieldset>
            <button type="submit" class="btn-signup">Continue</button>
        </form>
    </div>
</section>

